{
  "name": "@codynog/rn-ui-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for React Native UI Components - provides component analysis via ts-morph",
  "main": "dist/index.js",
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "react-native",
    "ui-components",
    "typescript",
    "ts-morph"
  ],
  "author": "codynog",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codynog/rn-ui.git",
    "directory": "mcp-server"
  },
  "scripts": {
    "start": "tsx index.ts",
    "build": "tsc index.ts --outDir dist --target es2022 --module esnext --moduleResolution bundler",
    "dev": "tsx watch index.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ts-morph": "^24.0.0",
    "tsx": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "bin": {
    "rn-ui-mcp-server": "./dist/index.js"
  },
  "files": ["index.ts", "dist/", "README.md"],
  "engines": {
    "node": ">=18.0.0"
  }
}
